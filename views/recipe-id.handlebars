                            <h5 class="card-title"><a>{{recipe.name}}</a>
                            </h5>
                            <!--                            <div class="card-text collapse" id="collapseRecipe1">-->
                            <div class="card-text">
                                <h6><u>Utencils:</u><span
                                        class="list-items"> Khife, Cutting Board, 2 Skillets, Grill</span></h6>
                                <h6><u>Ingredients:</u></h6>
                                <ul class="list-items">
                                    {{#each ingredients}}
                                        <li><i class="bx bx-checkbox"></i>{{name}},
                                            <small><em>{{amount}} {{unit}}</em></small>
                                            <i class="bx bx-cart cart"></i>
                                        </li>
                                    {{/each}}
                                </ul>
                                <h6><u>Method:</u></h6>
                                <ol class="list-items">{{{recipe.method}}}</ol>
                            </div>
                        </div>
                        <!-- <a href="/">
