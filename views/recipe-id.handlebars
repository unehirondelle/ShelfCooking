<main id="main">
    <section id="cookbook" class="cookbook">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="card">
                        <img src="img/sandwich.jpg" class="card-img-top" alt="sandwich picture">
                        <div>
                            <h6><i class="bx bx-time"></i> {{recipe.time}} <i
                                    class="bx bx-face"></i> {{recipe.person_num}}</h6>
                        </div>
                        <div class="card-body">
                            <!-- <h5 class="card-title"><a data-toggle="collapse" href="#collapseRecipe1"
                                                      aria-expanded="false" aria-controls="collapseRecipe1">{{recipe.name}}</a>
                            </h5>
