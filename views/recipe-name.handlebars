{{> header}}

<main id="main">
    <section id="cookbook" class="cookbook">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-8 col-sm-12 col-12">
                    <div class="card">
                        {{#if recipe.image}}
                            <img src="/images/{{recipe.id}}" class="card-img-top" alt="{{recipe.name}} picture">
                        {{else}}
                            <img src="../../img/RecipePlaceholder.jpg" class="card-img-top"
                                 alt="{{recipe.name}} picture">
                        {{/if}}
                        <div>
                            <h6><i class="bx bx-time"></i> {{recipe.time}} <i
                                    class="bx bx-face"></i> {{recipe.person_num}}</h6>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><a>{{recipe.name}}</a>
                            </h5>
                            <div class="card-text">
                                <h6><u>Utensils:</u><span
                                        class="list-items"> {{recipe.utensils}}</span></h6>
                                <h6><u>Ingredients:</u></h6>
                                <ul class="list-items">
                                    {{#each ingredients}}
                                        <li class="clearfix"><i class="bx bx-checkbox h5 float-left"></i>{{name}},
                                            <small><em>{{amount}} {{unit}}</em></small>
                                            <i class="bx bx-cart cart h5 float-right"></i>
                                        </li>
                                    {{/each}}
                                </ul>
                                <h6><u>Method:</u></h6>
                                <ol class="list-items">{{{recipe.method}}}</ol>
                            </div>
                        </div>
                        <a href="/cookbook/{{recipe.type}}">
                            <div class="card-footer">
                                <p class="text-center h5">
                                    Back to {{recipe.type}} list
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>

{{> footer}}